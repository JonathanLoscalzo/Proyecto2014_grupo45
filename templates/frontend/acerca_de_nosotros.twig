{% extends "frontend_layout.php" %}

{% block content %}
<div id="content">
	<h2>
		Acerca de Nosotros			
	</h2>
		 {% if linkedin_data.id is defined %}
                    <label>Quienes somos</label>
                    <p>{{ linkedin_data.summary }}</p>

                    <label>Premios</label>

                    {% for premio in linkedin_data.honorsAwards.values %}
                    <p>Titulo: {{ premio.name }}</p>
                    <p>Emisor: {{ premio.issuer }}</p>
                    {% endfor %}


                    <label>Contacto</label>
                    <p>{{ linkedin_data.emailAddress }}</p>
                 {% else %}
                     <p>No se pudo obtener los datos </p>
                 {% endif %}
</div>	
{% endblock %}