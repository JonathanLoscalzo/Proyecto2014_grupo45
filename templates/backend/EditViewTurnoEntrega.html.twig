{% extends "backend_layout.php" %}

{% block head %}
    {{ parent() }}

    <script type="text/javascript" src="{{server}}js/plugins/jquery-2.1.2.js"></script>
    <link href="{{server}}/js/plugins/jquery-ui/jquery-ui.css" rel="stylesheet">
    <script src="{{server}}js/plugins/jquery-ui/jquery-ui.js"></script>
    <script type="text/javascript" src="{{server}}js/plugins/jquery.timepicker.js"></script>
    <script type="text/javascript" src="{{server}}js/plugins/jquery.timepicker.css"></script>


{% endblock %}

{% block content %}
    <div id="content">
        <h3> Editar Usuario </h3>
        <form action="./{{server}}turnosEntrega/edit" method="POST">
            <div class="conj-block">
                <div class="conj-block">
                    <input id="id" name ="id" value="{{turno.id}}" style="display:none">
                    <label for="fecha" style = "display : block">Fecha: </label><input id="fecha" placeholder="Ej: 22/09/2014" type="text" name="fecha" value="{{ turno.fecha }}" >
                    <br>
                    <label for="hora" style = "display : block">Hora: </label><input id="hora" placeholder="Ej: 20:00 " type="text" name="hora" value = {{turno.hora}}>
                    <br>
                </div>
                <hr>
            </div>  
            <button id="submit" type="submit" name="submit"> Enviar </button>
        </form>
    </div>
{% endblock %}
{% block scripts %}
    <script>
        $(document).ready(function () {
            //$('#tabla-entidades').dataTable();
            $("#hora").timepicker({
                'timeFormat': 'H:i',
                'minTime': '8:00',
                'maxTime': '20:30',
                'forceRoundTime': true
            });
            $("#hora").timepicker('option', {useSelect: true});

            $("#fecha").datepicker({
                minDate: 0,
                showOn: "button",
                buttonImage: "./{{server}}images/icons/calendar.gif",
                buttonImageOnly: true,
                buttonText: "Seleccione fecha"
            });
            $("#fecha").datepicker("option", "dateFormat", 'dd/mm/yy');
            $("#fecha").val("{{turno.fecha}}");
        });
    </script>
{% endblock %}